<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
	<servlet>
		<servlet-name>WebService</servlet-name>
		<servlet-class>com.gestion.livre.servlet.WebServiceServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>WebService</servlet-name>
		<url-pattern>/ws</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>AddAuteur</servlet-name>
		<servlet-class>com.gestion.livre.servlet.AddAuteurServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>AddAuteur</servlet-name>
		<url-pattern>/addAuteur</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>AddLivre</servlet-name>
		<servlet-class>com.gestion.livre.servlet.AddLivreServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>AddLivre</servlet-name>
		<url-pattern>/addLivre</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>GetAllAuteur</servlet-name>
		<servlet-class>com.gestion.livre.servlet.GetAllAuteurServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>GetAllAuteur</servlet-name>
		<url-pattern>/getAllAuteur</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>GetAllLivre</servlet-name>
		<servlet-class>com.gestion.livre.servlet.GetAllLivreServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>GetAllLivre</servlet-name>
		<url-pattern>/getAllLivre</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
</web-app>
